<div class="hero is-fullheight has-background-dark is-overflow-hidden">
  <div class="hero-body container">
    <div class="box has-background-light m-3 ">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h2 class="title has-text-centered has-text-dark">Sign up</h2>

        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="control has-icons-left">
            <%= f.email_field :email,
                          autofocus: true,
                          placeholder: "Email",
                          autocomplete: "email",
                          class: "input is-dark" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>
              characters minimum)</em>
          <% end %><br/>
          <div class="control has-icons-left ">
            <%= f.password_field :password, autocomplete: "new-password", class: "input is-dark" %>

            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br/>
          <div class="control has-icons-left ">
            <%= f.password_field :password_confirmation,
                             autocomplete: "new-password",
                             class: "input is-dark" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>

        <div class="actions is-flex is-justify-content-center">
          <div class="control">
            <%= f.submit t("main.sign_up"), class: "button is-link" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
