<div class="columnsis-centered ">

  <div class="column box has-background-white">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="title has-text-centered has-text-dark">Log in</h2>

      <div class="field">
        <div class="control">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, class: "is-checkradio is-large" %>
          <%= f.label :remember_me, class: "label, is-small" %>
        </div>
      <% end %>

      <div class="actions is-flex is-justify-content-center">
        <div class="control">
          <%= f.submit t("main.sign_in"), class: "button is-link" %>
        </div>
      </div>

    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
