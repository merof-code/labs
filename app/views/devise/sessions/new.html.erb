<div class="hero is-fullheight has-background-dark">
  <div class="hero-body container">
    <div class="box has-background-light m-3 ">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2 class="title has-text-centered has-text-dark">Log in</h2>

        <div class="field">
          <div class="control has-icons-left">
            <%= f.email_field :email,
                          autofocus: true,
                          placeholder: "Email",
                          autocomplete: "email",
                          class: "input is-dark" %>
            <span class="icon is-small is-left">
              <i class="fas fa-envelope"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <div class="control has-icons-left ">
            <%= f.password_field :password,
                             placeholder: "Email",
                             autocomplete: "current-password",
                             class: "input is-dark" %>
            <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
            </span>
          </div>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, class: "is-checkradio is-large " %>
            <%= f.label :remember_me, class: "label, is-small is-dark" %>
          </div>
        <% end %>
        <div class="actions is-flex is-justify-content-center">
          <div class="control">
            <%= f.submit t("main.sign_in"), class: "button is-link" %>
          </div>
        </div>

      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
