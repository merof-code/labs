<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div class="container notification is-warning">
      <h2><%= pluralize(user.errors.count, "error") %>
        prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nickname, class: "label" %>
    <div class="control">
      <%= form.text_field :nickname, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :pfp, class: "label" %>
    <div class="control">
      <%= form.text_field :pfp, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :email, class: "label" %>
    <div class="control">
      <%= form.text_field :email, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :phone_number, class: "label" %>
    <div class="control">
      <%= form.text_field :phone_number, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :first_name, class: "label" %>
    <div class="control">
      <%= form.text_field :first_name, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :last_name, class: "label" %>
    <div class="control">
      <%= form.text_field :last_name, class: "input" %>
    </div>
  </div>

  <div class="field">
    <%= form.label :middle_name, class: "label" %>
    <div class="control">
      <%= form.text_field :middle_name, class: "input" %>
    </div>
  </div>

  <div class="is-flex">
    <div class="field pr-2">
      <%= form.label :role_id, class: "label" %>
      <div class="select is-medium">
        <%= form.collection_select :role_id, Role.all, :id, :name, class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= form.label :department_id, class: "label" %>
      <div class="select is-medium">
        <%= form.collection_select :department_id,
                               Department.all,
                               :id,
                               :name,
                               class: "input" %>
      </div>
    </div>
  </div>

  <div class="is-flex">
    <div class="field">
      <%= form.label :start_date, class: "label" %>
      <div class="control">
        <%= form.date_field :start_date, class: "input" %>
      </div>
    </div>
    <div class="field">
      <%= form.label :start_date, class: "label" %>
      <div class="control">
        <%= form.time_field :start_date,
                        ignore_date: true,
                        class: "input",
                        value: "%H:%M",
                        min: "hh:mm:ss",
                        max: "hh:mm:ss" %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= form.label :end_date, class: "label" %>
    <div class="control">
      <%= form.datetime_field :end_date, class: "input" %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
