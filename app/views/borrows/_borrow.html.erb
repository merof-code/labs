<div id="<%= dom_id(borrow) %>" class="box">
  <div class="columns is-vcentered">
    <div class="column">
      <p>
        <strong>Book:</strong>
        <%= borrow.physical_book.book.name %>
      </p>

      <p>
        <strong>User:</strong>
        <%= borrow.user.name %>
      </p>

      <p>
        <strong>Approver:</strong>
        <%= borrow.approver.name %>
      </p>

      <p>
        <strong>Return inspector:</strong>
        <%= borrow.return_inspector.name %>
      </p>

      <p>
        <strong>Borrow date:</strong>
        <%= borrow.borrow_date %>
      </p>

      <p>
        <strong>Return date:</strong>
        <%= borrow.scheduled_return_date %>
      </p>

      <p>
        <strong>Returned at:</strong>
        <%= borrow.returned_at %>
      </p>

      <p>
        <strong>Cost:</strong>
        <%= borrow.cost %>
      </p>

      <p>
        <strong>Comments:</strong>
        <%= borrow.comments %>
      </p>
    </div>
    <div class="column is-narrow">
      <div class="buttons">
        <%= link_to edit_borrow_path(borrow), class: "button is-primary" do %>
          <span class="icon">
            <i class="fas fa-edit"></i>
          </span>
          <span>Edit</span>
        <% end %>

        <%= link_to borrow, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger" do %>
          <span class="icon">
            <i class="fas fa-trash-alt"></i>
          </span>
          <span>Delete</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
